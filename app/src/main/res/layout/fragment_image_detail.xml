<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.mason.kakao.masonsgallary.ui.detail.ImageDetailViewModel"
            />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            picasso:fitCenterInside="@{viewModel.image}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonDelete"
            />

        <ImageView
            android:id="@+id/imageTag"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            picasso:fit="@{viewModel.tagImage}"
            app:layout_constraintLeft_toLeftOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView"
            />

        <Button
            android:id="@+id/buttonDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="자세히"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/buttonDelete"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:onClick="@{() -> viewModel.onDelete()}"
            app:layout_constraintLeft_toRightOf="@id/buttonDetail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</layout>